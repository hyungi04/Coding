}

int CHealth::run5min() {
    return 0;
}

void CHealth::cel2faren() {
    faren = cel * 9.0 / 5.0 + 32.0;
}

void CHealth::faren2cel() {
    cel = (faren - 32.0) * 5.0 / 9.0;
}

void CHealth::GetHealthAge() {
    healthAge = beat / pressure;
}

