#include "health.hpp"
#include <iostream>

int CHealth::nCHealth = 0;

CHealth::CHealth() {
    nCHealth++;
    age = 20;
    beat5min = temp5min = nullptr;
}

CHealth::CHealth(int a) {
    nCHealth++;
    age = a;
    beat5min = temp5min = nullptr;
}

CHealth::~CHealth() {
    delete[] beat5min;
    delete[] temp5min;
}
